@{
    var ordId = Request.QueryString["OrderId"];
    try
    {
        System.Threading.Thread.Sleep(200);
        var db = Database.Open("Orders");
        var details = db.Query(@"SELECT * FROM Details WHERE [Order Id] = @0 
                ORDER BY [Product Name]", ordId).ToList();
        var json = Json.Encode(new{Result = "OK", Records = details});
        Response.Write(json);
    }
    catch (Exception ex)
    {
        var json = Json.Encode(new{Result = "ERROR", Message = ex.Message});
        Response.Write(json);
    }
}
